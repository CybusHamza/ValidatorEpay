<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border">
    <include
        android:id="@+id/app_bar_history"
        layout="@layout/app_bar">
    </include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_marginStart="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receipt"
            android:textColor="@android:color/background_dark"
            android:textSize="70dp" />

        <TextView
            android:id="@+id/transId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="87dp"
            android:text="Id:"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/t_trans_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/transId"
            android:layout_marginLeft="64dp"
            android:layout_marginStart="64dp"
            android:layout_toEndOf="@+id/transId"
            android:layout_toRightOf="@+id/transId"
            android:text="12345"
            android:textColor="@color/zxing_custom_result_view" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/transId"
            android:layout_marginTop="30dp"
            android:text="Date:"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/t_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@+id/textView13"
            android:layout_alignLeft="@+id/t_trans_id"
            android:layout_alignStart="@+id/t_trans_id"
            android:text="25-05-2017" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/transId"
            android:layout_alignStart="@+id/transId"
            android:layout_below="@+id/textView11"
            android:layout_marginTop="36dp"
            android:text="Name:"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/t_cust_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView13"
            android:text="xyz"
            android:layout_alignTop="@+id/textView13"
            android:layout_alignLeft="@+id/t_date"
            android:layout_alignStart="@+id/t_date"/>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView13"
            android:layout_marginTop="36dp"
            android:text="Phone:"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/t_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView15"
            android:text="123456789"
            android:layout_alignLeft="@+id/t_cust_name"
            android:layout_alignStart="@+id/t_cust_name"  />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView15"
            android:layout_marginTop="36dp"
            android:text="From:"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView17"
            android:layout_alignLeft="@+id/textView13"
            android:layout_alignRight="@+id/textView17"
            android:layout_alignStart="@+id/textView13"
            android:layout_below="@+id/textView17"
            android:layout_marginTop="43dp"
            android:text="To:"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@+id/t_date"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="75dp"
            android:layout_marginRight="75dp"
            android:background="@drawable/qr_img" />

        <TextView
            android:id="@+id/t_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView17"
            android:text="TextView"
            android:layout_alignLeft="@+id/t_contact"
            android:layout_alignStart="@+id/t_contact" />

        <TextView
            android:id="@+id/t_to"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/t_from"
            android:layout_alignRight="@+id/t_from"
            android:layout_below="@+id/t_from"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="53dp"
            android:text="TextView"
            android:layout_alignBottom="@+id/textView18" />

        <TextView
            android:id="@+id/tvTicketPurchased"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t_to"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="36dp"
            android:text="Tickets Purchased"
            android:textColor="@android:color/background_dark"
            android:textSize="40dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTicketPurchased"
            android:layout_marginTop="40dp">

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_marginLeft="40dp"
                        android:text="Fare Type"
                        android:textColor="#000"
                        android:textSize="24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_marginLeft="60dp"
                        android:text="Net"
                        android:textColor="#000"
                        android:textSize="24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:layout_marginLeft="30dp"
                        android:text="Fare"
                        android:textColor="#000"
                        android:textSize="24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="4"
                        android:layout_marginLeft="30dp"
                        android:text="Qty"
                        android:textColor="#000"
                        android:textSize="24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="5"
                        android:layout_marginLeft="30dp"
                        android:text="Total"
                        android:textColor="#000"
                        android:textSize="24dp" />

                </TableRow>

                <TableRow android:background="@color/colorPrimary">

                    <TextView
                        android:id="@+id/fareType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_marginLeft="40dp" />

                    <TextView
                        android:id="@+id/net"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_marginLeft="60dp"
                        android:text="Net"
                        android:textColor="#000"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/farePrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:layout_marginLeft="30dp"
                        android:text="Fare"
                        android:textColor="#000"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/no_of_persons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="4"
                        android:layout_marginLeft="30dp"
                        android:text="Qty"
                        android:textColor="#000"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="5"
                        android:layout_marginLeft="30dp"
                        android:text="Total"
                        android:textColor="#000"
                        android:textSize="24dp" />

                </TableRow>
            </TableLayout>
        </ScrollView>
    </RelativeLayout>


</LinearLayout>