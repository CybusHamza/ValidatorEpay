<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainScreen"
    android:background="@drawable/background">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar">

    </include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=" Epay     Powered by Cybus Solutions Limited "
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:alpha="0"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:id="@+id/textView3"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:textSize="0sp"

        android:layout_below="@+id/app_bar"

        android:layout_marginBottom="0dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/from_spinner"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/dropdown_mainscreen" />

    <Spinner
        android:id="@+id/to_spinner"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:layout_alignEnd="@+id/from_spinner"
        android:layout_alignLeft="@+id/from_spinner"
        android:layout_alignRight="@+id/from_spinner"
        android:layout_alignStart="@+id/from_spinner"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="60dp"
        android:background="@drawable/dropdown_mainscreen" />

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Proceed"
        android:id="@+id/proceed"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:background="@drawable/bg_btn_route_detailed"
        android:layout_above="@+id/textView"
        android:layout_marginBottom="50dp"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="28sp"
        android:text="Select Start Point"
        android:id="@+id/textView7"
        android:textStyle="bold"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select End Point"
        android:textColor="#fff"
        android:textSize="28sp"
        android:id="@+id/textView8"
        android:textStyle="bold"
        android:layout_marginTop="85dp"
        android:layout_below="@+id/from_spinner"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />


</RelativeLayout>
