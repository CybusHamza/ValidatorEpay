<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="145dp">
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="137dp"
        android:background="@drawable/bg_histroy_row_left"

        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:text="random num"
            android:id="@+id/tvTransId"
            android:textSize="12sp"
            android:gravity="left"
            android:textColor="#fff"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:text="$350"
            android:textSize="25sp"
            android:gravity="left"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/tvCharge"
            android:textColor="#fff"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:text="Date"
            android:textSize="12sp"
            android:gravity="left"

            android:id="@+id/tvTime"
            android:textColor="#fff"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:text="Date"
            android:textSize="12sp"
            android:gravity="left"
            android:id="@+id/tvDate"
            android:textColor="#fff"/>




    </LinearLayout>
    <!--<ImageView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:src="@drawable/bg_list_history"-->
    <!--android:paddingTop="15dp"-->
    <!--android:paddingLeft="5dp"-->

    <!--android:paddingRight="5dp"-->
    <!--/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:id="@+id/tvStartingPoint"
            android:text="Johar Town"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />
        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#C0C0C0"-->
        <!--android:layout_marginLeft="5dp"-->
        <!--android:layout_marginRight="5dp"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/tvDestinationPoint"
            android:text="cheeechaaa watniii"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#C0C0C0"
                android:textStyle="bold"
                android:labelFor="@+id/tvNumberOfPersons"
                android:text="No. of Persons" />
            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="#C0C0C0"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Ticket Price" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:weightSum="1"

            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvNumberOfPersons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#C0C0C0"
                android:text="10"
                android:textSize="19sp"
                android:textStyle="bold"
                android:layout_marginBottom="7dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:layout_weight=".40"/>

            <View
                android:layout_width="17dp"
                android:layout_height="match_parent"
                />
            <TextView
                android:id="@+id/tvCPPP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".40"
                android:textSize="19sp"
                android:gravity="center"
                android:textColor="#C0C0C0"
                android:text="20"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"

                />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>