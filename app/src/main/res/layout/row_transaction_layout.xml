    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/tvTransId"
            android:layout_width="150dp"

            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="random num"
            android:textColor="#fff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvCharge"
            android:layout_width="130dp"

            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="$350"
            android:textColor="#fff"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="130dp"

            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Date"

            android:textColor="#fff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="130dp"

            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Date"
            android:textColor="#fff"
            android:textSize="15sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="137dp"
        android:orientation="vertical">
        <View
            android:layout_marginTop="13dp"
            android:layout_width="3dp"
            android:layout_height="110dp"
            android:layout_marginBottom="13dp"
            android:background="#C0C0C0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_marginLeft="0dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:id="@+id/tvStartingPoint"
            android:text="Johar Town"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />
        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C0C0C0"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="3dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            android:id="@+id/tvDestinationPoint"
            android:text="cheeechaaa watniii"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/border_transactions"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#C0C0C0"
                android:textStyle="bold"
                android:textSize="15sp"
                android:labelFor="@+id/tvNumberOfPersons"
                android:text="No. of Persons" />

            <TextView
                android:id="@+id/tvNumberOfPersons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="10"
                android:textColor="#C0C0C0"

                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
            <View
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/border_transactions"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:text="Ticket Price"
                android:textColor="#C0C0C0"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCPPP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#C0C0C0"
                android:text="20"
                android:textStyle="bold"

                />

        </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>